<%- include('../partials/head',{cssFile:'userStyles.css'})%>

    <body>
        <%- include('../partials/header')%>

            <!-- Container -->
            <main class="main-body">
                <div class="container" style="margin-top: 40px;">
                    <div class="row">
                        <div class="col-md-3">
                            <h2>Hola <%= user.fullName %>
                            </h2>
                            <img src="/img/users/<%=user.avatar%> ">
                            <br>
                            <br>
                            <div class="alert alert-success"> Tu Usuario es: <b><%= user.email %></b> </div>
                            <div class="alert alert-success"> Tu tienes el Rol de: <b> <%= user.userRole.role %>  </b> </div>
                        </div>
                        <div class=" address-block-h">
                            <div class="address-title">
                                <h2>Usuarios Actuales</h2>
                            </div>
                           
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Nombre Completo</th>
                                        <th scope="col">Usuario/Email</th>
                                        <th scope="col">Role</th>
                                        <!-- <th scope="col">Creado el</th>
                                        <th scope="col">Actualizado el</th> -->
                                        <th scope="col"> </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="vertical_align">
                                        <% for( let user of userList ) { %>

                                            <td>
                                                <%= user.id %>
                                            </td>
                                            <td>
                                                <%= user.fullName %>
                                            </td>
                                            <td>
                                                <%= user.email %>
                                            </td>
                                            <td>
                                            <div >
                                                <form action="/users/UpdateRole/<%= user.id %>" method="post" id="form-delete" class="updateRole">
                                                    <input type="hidden" name="id" value="<%= user.id %>">
                                                    <select name="profile"
                                                    class="form-control <%= locals.errors && errors.country ? 'is-invalid' : null %>" <option
                                                    value="">Eleg√≠ un Perfil</option>
                                                
                                                    <% for (const profile of userRoles) { %>
                                                        <option value="<%= profile.id %>" <%=locals.userList && (profile.id===user.role_id) ? 'selected' :null %>> <%= profile.role %> </option>
                                                        <% } %>
                                                </select>
                                                
                                                    <button type=" Editar" id="btn-editar" class="btn btn-warning btn-sm">
                                                        <i class="fa-solid fa-pen-to-square"></i>
                                                    </button>
                                                </form>
                                             </div>
                                            </td>
                                            <!-- <td>
                                                <%= user.createdAt %>
                                            </td>
                                            <td>
                                                <%= user.updatedAt %>
                                            </td> -->
                                            <td>
                                            
                                            </td>

                                    </tr>
                                    <% } %>

                                </tbody>
                            </table>
                        
                        </div>

                    </div>
                </div>
                <!-- //Container -->
                
                <%- include('../partials/footer')%>

                    <script src="/scripts/UserEvents.js"></script>
    </body>

    </html>