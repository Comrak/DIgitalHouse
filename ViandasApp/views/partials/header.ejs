<header class="main-header">
    <div class="main-header-top-bar">
        <div class="top-bar-container">
            <a href="/" class="logo-wrapper"><img src="../../img/homeIconNoBG.png" class="logo" alt="Error"></a>
            <div class="search-bar form-outline">
                <input class="Buscador form-control" type="text" placeholder="Cual Vianda Queres hoy?">
                <button class="search-buttom btn btn-primary"><i class="fas fa-search"></i></button>
            </div>
        </div>
        <h2 class="copy-header">
            <span class="text-entry"> Tus viandas favoritas directo a tu casa</span>
        </h2>
    </div>

    <a href="#" class="hamburguer-button">
        <i class="fa-solid fa-bars"></i>
    </a>



    <nav class="main-navbar">
        <ul class="left-navbar">

            <li> <i class="fa-solid fa-bowl-food"></i> <a href="/products">Viandas</a></li>
            <% if (locals.isLogged && locals.userLogged.role_id === 1) { %>
                <li> <i class="fa-solid fa-gear"></i> <a href="/products/create">Manejo de productos</a></li>
                <% } %>
                    <li> <i class="fa-solid fa-truck"></i> <a href="#">Zonas de Envio</a></li>

        </ul>
        <ul class="right-navbar">
            <% if (!locals.isLogged) { %>
                <li> <a href="/users/register">Crea Tu Cuenta</a> <i class="fas fa-user-circle"></i> </li>
                <li> <a href="/users/login">Ingresa</a> <i class="fas fa-sign-in-alt"></i> </li>
                <% } else { %>

                    <li> <img src="/img/users/<%=locals.userLogged.avatar%>" width="40" style="border-radius: 100%;">
                        <a href="/users/profile">Hola <%= locals.userLogged.fullName %> </a>
                    </li>
                    <li> <a href="/users/logout">Cerrar Sesion</a> <i class="fas fa-sign-in-alt"></i> </li>  
                          
                    <li> <a href="/trans/carrito">Tu carrito</a> <i class="fas fa-shopping-basket"></i> </li>
        </ul>
        <% } %>
    </nav>
</header>