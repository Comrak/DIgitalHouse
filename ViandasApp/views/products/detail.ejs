<%- include('../partials/head',{cssFile:'productsStyles.css'})%>


    <body>
        <%- include('../partials/header')%>
            <!-- <section class="banner">
        <img src="img/homeBanner.jpg" alt="Como conoci a tu vianda">
    </section> -->
            <main class="main-body">
                <section class="ult_visita">
                    <h3 class="headlines">Has Seleccionado el producto: <strong><%=productToFind.name %> </strong>
                    </h3>

                    <div class="product-wrapper-2">
                        <% productToFind.name %>
                            <article class="product-article">
                                <div class="imagen-producto">
                                    <img src="<%= productToFind.image %>" id="<%= productToFind.name%>"
                                        class="Img-Edit">
                                </div>
                                <div class="art_principal">

                                    <p class="prices"> Precio $<%= productToFind.price %>
                                    </p>

                                    <p class="description">
                                        <%= productToFind.description %>
                                    </p>
                                </div>

                            </article>
                            <% if (locals.isLogged && locals.userLogged.role_id === 1) { %>
                            <div class="buttons">
                                <form action="/products/edit/<%=productToFind.id%>">
                                    <button type="submit" class="button-edit">Editar</button>
                                </form>
                               <form action="/products/delete/<%=productToFind.id%>?_method=DELETE" method="POST" id="form-product-delete"> 
                                    <button type="submit" class="button-delete">Eliminar</button>
                                </form>
                            </div>
                            <% } %>
                    </div>
                </section>
                <script src = "../scripts/productDelete.js"></script>
            </main>
            <%- include('../partials/footer')%>